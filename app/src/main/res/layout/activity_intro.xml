<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.IntroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_santa"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/santa_main" />

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/image_santa"
            android:layout_toRightOf="@id/image_santa"
            android:src="@drawable/santa_logo" />
    </RelativeLayout>

    <TextView
        android:id="@+id/et_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:text="@string/intro"
        android:textSize="30sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/album" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:background="@drawable/custom_btn"
            android:layout_alignBottom="@+id/image_album"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>



</LinearLayout>